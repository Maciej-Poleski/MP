\section{Drzewa nizane}
\lstset{language=C++}
\begin{lstlisting}
TreeNode *next=nullptr;

void makeLink(TreeNode *node)
{
    if(node==nullptr)
        return;
    makeLink(node->right);
    node->next=next;
    next=node;
    makeLink(node->left);
}
\end{lstlisting}

